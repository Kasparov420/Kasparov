{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": false,
    "declaration": true,
    "sourceMap": true
  },
  "include": ["api/**/*.ts"],
  "exclude": ["node_modules"]
}
